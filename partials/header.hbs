<div class="l-header-tp theme-margin" role="banner">
	{{#if @blog.logo}}
		<a href="{{@blog.url}}" class="logo-tp"><img src="{{@blog.logo}}" alt="{{@blog.title}}"></a>
	{{/if}}

	<h1 class="blogtitle-tp">
		<a href="{{@blog.url}}">{{@blog.title}}</a>
	</h1>

	<p class="blogdescription-tp">
		<a href="{{@blog.url}}">{{@blog.description}}</a>
	</p>
</div>